@page "/"
@inject IShoppingService ShoppingService

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

<CreateList />

<hr />

@foreach (var item in _shoppingLists)
{
    <div>
        @item.Title

        <a href="./lists/@item.Id">manage list</a>
    </div>
}


@code{
    private IEnumerable<ShoppingList> _shoppingLists = Enumerable.Empty<ShoppingList>();


    protected override async Task OnInitializedAsync()
    {
        _shoppingLists = await ShoppingService.GetShoppingListsAsync();
    }
}